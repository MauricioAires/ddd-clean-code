{
  "extends": [
    "@rocketseat/eslint-config/node",
    "plugin:vitest-globals/recommended"
  ],
  "rules": {
    /// Permitir criar constructor sem propriedades dentro do objeto {}
    "no-useless-constructor": "off",
    // Permitir criar interfaces com objeto vazio {}
    "@typescript-eslint/no-empty-interface": "off",
    // Permitir criar funções com objeto vazio {}
    "@typescript-eslint/no-empty-function": "off",
    // Permitir iniciar uma classe sem atribuir a uma constante new Class ( const class = new Class())
    "no-new": "off"
  },
  "env": {
    "vitest-globals/env": true
  }
}
